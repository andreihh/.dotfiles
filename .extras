# ~/.extras: this file contains exported installation paths for various software
# packages, making them available in interactive shells.

# Export Java SDK. Set the installation directory accordingly.
export JAVA_HOME="/usr/lib/jvm/java-11-openjdk-amd64"
export PATH="$PATH:$JAVA_HOME/bin"

# Export Android SDK. Set the installation directory accordingly.
export ANDROID_HOME="$HOME/Programs/sdk/android-sdk-linux"
export PATH="$PATH:$ANDROID_HOME/tools"
export PATH="$PATH:$ANDROID_HOME/platform-tools"

# Export Scala SDK. Set the installation directory accordingly.
export SCALA_HOME="$HOME/Programs/sdk/scala-2.12.1"
export PATH="$PATH:$SCALA_HOME/bin"

# Export SBT. Set the installation directory accordingly.
export SBT_HOME="$HOME/Programs/sbt/sbt-launcher-packaging-0.13.13"
export PATH="$PATH:$SBT_HOME/bin"

# Export Miniconda. Set the installation directory accordingly.
export CONDA_HOME="$HOME/Programs/Miniconda"
export PATH="$PATH:$CONDA_HOME/bin"

# Export node.js. Set the instalation directory accordingly.
export NODEJS_HOME="$HOME/Programs/node-v10.16.3-linux-x64"
export PATH="$PATH:$NODEJS_HOME/bin"
