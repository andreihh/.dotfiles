# ~/.exports: this file contains exported preferences for interactive shells.

# Prefer Bash as shell.
export SHELL='/bin/bash'

# Prefer US English and use UTF-8.
export LANG='en_US.UTF-8'
export LC_ALL='en_US.UTF-8'

# Make Vim the default editor.
export EDITOR='vim'

# Make Firefox the default browser.
export BROWSER='firefox'

# Make fzf use ripgrep to search only file paths with smart case by default.
export FZF_DEFAULT_COMMAND='rg --files --hidden --smart-case'

# Export the JRE for apps that rely on `$JAVA_HOME`.
export JAVA_HOME=$(readlink -e "/usr/bin/java" | sed "s:/bin/java::")

# Export NVM and set up shell autocompletion.
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
